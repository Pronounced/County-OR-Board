@model OrBoard.Domain.Models.Procedure


<div>
    <form asp-controller="Cases" asp-action="NewCase" method="post" id="add">
        <p>
            <label for="schedule">Date and Time of Procedure</label>
            <input type="date" id="date" name="date">
            <input type="time" id="time" name="time">
        </p>
        <p>
            <label for="anesthetist">Anesthetist</label>
            <select></select>
        </p>
        <p>
            <label for="hospital">Hospital</label>
            <select></select>
        </p>
        <p>
            <label for="hospital">Hospital</label>
            <select></select>
        </p>
        <p>
            <label for="or">Operating Room</label>
            <select></select>
        </p>
        <p>
            <label for="pname">Procedure Name</label>
            <input type="text" id="pname" asp-for="@Model.ProcedureName">
            @Html.ValidationMessageFor(p => p.ProcedureName, "", new{ @class = "text-danger" })
        </p>
        <p>
            <label for="duration">Estimated Time of Procedure(hours:minutes)</label>
            <input type="text" pattern="([0-9]{1}[0-9]{1}:){0,2}[0-5]{0,1}[0-9]{1}(\.\d+)?" asp-for="@Model.EstimatedProcedureLength">
        </p>
        <input type="hidden" value="Pending" asp-for="@Model.Status">
    </form>
    <button type="submit" form="add">Submit</button>
</div>