@model OrBoard.Client.Models.EditCasesViewModel

@{
    Layout = "_Layout";
}

<body>
    <div style="position: relative; left: 50px;">
        <form action="/editcases/index" method="post" id="edit">
            <p>
                <label>Anesthetist</label>
                <select asp-for="@Model.Procedure.AnesthetistId">
                    @foreach (var item in Model.Anesthetist)
                    {
                        <option value="@item.AnesthetistId">@item.FirstName @item.LastName</option>
                    }
                </select>
            </p>
            <p>
                <label>Operating Room</label>
                <select asp-for="@Model.Procedure.OperatingRoomId">
                    @foreach (var item in Model.OperatingRoom)
                    {
                        <option value="@item.OperatingRoomId">@item.HospitalName | Room @item.OperatingRoomId | @item.OpRoomStatus | @item.DateTimeAvailable</option>
                    }
                </select>
            </p>
            <p>
                <label>Procedure Name</label>
                <input type="text" asp-for="@Model.Procedure.ProcedureName" value="@Model.Procedure.ProcedureName">
            </p>
            <p>
                <label>Estimated Time of Procedure(hours:minutes)</label>
                <input type="text" pattern="([0-9]{1}[0-9]{1}:){0,2}[0-5]{0,1}[0-9]{1}(\.\d+)?" asp-for="@Model.Procedure.EstimatedProcedureLength" value="@Model.Procedure.EstimatedProcedureLength">
            </p>
            <p>
                <label>Actual Start Time</label>
                <input type="date" name="startdate" id="startdate">
                <input type="time" name="starttime" id="starttime">
            </p>
            <p>
                <label>Actual Finish Time</label>
                <input type="date" name="enddate" id="enddate">
                <input type="time" name="endtime" id ="endtime">
            </p>
            <p>
                <label>Status</label>
                <select asp-for="@Model.Procedure.Status">
                    <option value="Pending">Pending</option>
                    <option value="Complete">Complete</option>
                </select>
            </p>
        </form>
        <button type="submit" form="edit">Submit</button>
    </div>
</body>